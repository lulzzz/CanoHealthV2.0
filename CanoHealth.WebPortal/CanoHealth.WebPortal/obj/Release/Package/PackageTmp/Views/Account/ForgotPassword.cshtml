@*@model IdentitySample.Models.ForgotPasswordViewModel*@
@model CanoHealth.WebPortal.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<header class="main-header main-header-inverse">
    <div class="container">
        <h1 class="page-title"></h1>

        <ol class="breadcrumb pull-right">
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="active">Forgot Password</li>
        </ol>
    </div>
</header>

<div class="container-fluid">
    <div class="col-md-6">
        @if(ViewBag.Confirm != null && ViewBag.Confirm != "")
        {
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h4>Confirmation!</h4>
                @ViewBag.Confirm
            </div>
        }

        <div class="panel panel-primary">
            <div class="panel-heading">@ViewBag.Title</div>
            <div class="panel-body">
                <hr />
                <div class="col-md-offset-1 col-md-10">
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()


                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label" })

                            @Html.TextBoxFor(m => m.Email, new { @class = "k-textbox", style = "width: 100%;" })

                        </div>
                        <div class="form-group">
                            
                                <input type="submit" class="btn btn-ar btn-primary" value="Email Link" />
                            
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
    
</div>







@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
