@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated) {
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" })) {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
           
            <li class="notifications"> <!--data-content="notifications-template"-->
                <a href="#">
                    <i class="fa fa fa-globe"></i>
                    <span class="badge js-notifications-count hide"></span>
                </a>
            </li>
   
            <li class="dropdown">
                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">@User.Identity.GetUserName()</a>
                <ul class="dropdown-menu dropdown-menu-left animated-2x animated fadeIn">
                    <li>@Html.ActionLink("Profile", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                    <!--<li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>-->
                    <li role="separator" class="divider"></li>

                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                </ul>
            </li>
        </ul>
    }
}
else {
    <ul class="nav navbar-nav navbar-right">
        @*<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
